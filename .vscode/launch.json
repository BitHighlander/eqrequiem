    "version": "0.2.0",
    "configurations": [
        {
            "name": "EQGO",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/cmd/server",
            "cwd": "${workspaceFolder}/server",
            "env": {},
            "args": []
        },
        {
            "name": "EQGO: Quest Dev",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/cmd/server",
            "cwd": "${workspaceFolder}/server",
            "env": {},
            "args": [],
            "buildFlags": "-tags=dev"
        },
        {
            "name": "Session Perf Bench",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/internal/session",
            "cwd": "${workspaceFolder}/server",
            "args": [
                "-test.bench=.",
                "-test.benchmem"
            ],
            "env": {}
        },
        {
            "name": "Quests Perf Bench",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/internal/quest/registry",
            "cwd": "${workspaceFolder}/server",
            "args": [
                "-test.bench=.",
                "-test.benchmem"
            ],
            "env": {}
        },
        {
            "name": "Quests Perf Dev Bench",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/server/internal/quest/registry",
            "cwd": "${workspaceFolder}/server/internal/quest/registry",
            "buildFlags": "-tags=dev",
            "args": [
                "-test.bench=.",
                "-test.benchmem"
            ],
            "env": {}
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Vite",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}